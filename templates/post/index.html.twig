{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}
{% block stylesheets %}
    <style>
        .divcenter{ display :flex;
            flex-direction:column;
            text-align: center;

            }
        .divdiv{
            border-top: 10px solid #000035;

            margin-bottom: 30px;
        }

    </style>
{% endblock %}
{% block body %}

    <div class="divcenter">
    <h1>Posts list</h1>

        <a class="btn btn-primary" href="{{ path('post_new') }}">Create new</a>


        {% for post in posts %}

            <div  class="divdiv">

                <a href="{{ path('post_show', {'id': post.id}) }}"> <h1>{{ post.title }}</h1></a>


                <img src="{{ post.image }}">
                <p>{{ post.content }}</p>
                <p>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</p>


                    <a  class="btn btn-primary" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>


            </div>


        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </div>



{% endblock %}
