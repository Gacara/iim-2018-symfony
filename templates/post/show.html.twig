{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}
{% block stylesheets %}
<style>
    .center{ display :flex;
        flex-direction:column;
        text-align: center;
    }


</style>
{% endblock %}
{% block body %}
    <h1 class="center">Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ post.image }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="center btn btn-primary" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
<br>

    <a class="center btn btn-primary" href="{{ path('post_index') }}">back to list</a>
<br>
    <div class="center"> {{ include('post/_delete_form.html.twig') }}</div>
{% endblock %}
